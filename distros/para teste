result=$(dialog --yesno '' 0 0)
case $result 
if [ "$result" = 0 ]; then
    sudo DEBIAN_FRONTEND=noninteractive apt install -y tzdata
	echo "${system_timezone}" | sudo tee /etc/timezone
	sudo dpkg-reconfigure -f noninteractive tzdata
else
    sudo apt-get install tzdata -y
fi



# Dialogs
export USER=$(whoami)
HEIGHT=0
WIDTH=100
CHOICE_HEIGHT=5

export PORT=1


if [ "$system_icu_locale_code" = "pt-BR" ]; then
MENU="Escolha o sistema operacional que será instalado: "
else
MENU="Choose the operating system to be installed: "
fi
OPTIONS=(1 "Ubuntu")

CHOICE=$(dialog --clear \
                --title "$TITLE" \
                --menu "$MENU" \
                $HEIGHT $WIDTH $CHOICE_HEIGHT \
                "${OPTIONS[@]}" \
                2>&1 >/dev/tty)

clear
case $CHOICE in
1)
echo "Ubuntu"
wget --tries=20 "${extralink}/distros/ubuntu.sh" -O start-distro.sh
;;

esac

HEIGHT=0
WIDTH=100

system_timezone=$(getprop persist.sys.timezone)
GMT_date=$(date +"%Z":00)

dialog --yesno "O fuso horário do seu sistema está configurado como (GMT${GMT_date}) ${system_timezone}. Deseja manter?"  $HEIGHT $WIDTH
clear
if [ $? -eq 0 ]; then
   export TZ=$system_timezone
else

fi